{
    "name": "Simple Timetracking",
    "description": "What are you working on?",
    "version": "1.0",
    "manifest_version": 2,
    "permissions": ["storage", "alarms", "tabs", "management"],
    "background": {
      "scripts": ["js/background.js"],
      "persistent": false
    },
    "options_ui": {
      "page": "view/settings.html",
      "open_in_tab": false
    },
    "browser_action": {
      "default_popup": "index.html",
      "default_icon": "images/icon-16.png"
  }
}
