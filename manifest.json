{
    "name": "Simple Timetracking",
    "description": "What are you working on?",
    "version": "1.0",
    "manifest_version": 2,
    "permissions": ["storage", "alarms", "tabs", "management"],
    "background": {
      "scripts": ["src/js/background.js"],
      "persistent": false
    },
    "browser_action": {
      	"default_popup": "src/view/settings.html",
      	"default_icon": "src/images/icon-16.png"
    }
}
