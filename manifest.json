{
    "name": "Simple Timetracking",
    "description": "What are you working on?",
    "version": "1.0",
    "manifest_version": 2,
    "permissions": ["storage", "alarms", "tabs"],
    "background": {
    	"scripts": ["background.js"],
      	"persistent": false
    },
    "browser_action": {
      	"default_popup": "popup.html",
      	"default_icon": "images/icon-16.png"
    }
}
